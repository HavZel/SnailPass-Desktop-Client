<UserControl x:Class="SnailPass_Desctop.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnailPass_Desctop.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                 FontSize="15"
                 FontWeight="Medium"
                 FontFamily="Uncut Sans"
                 Foreground="{StaticResource ResourceKey=DarkTextColor}"
                 CaretBrush="{StaticResource ResourceKey=SoftGreyColor}"
                 BorderBrush="{StaticResource ResourceKey=BorderColor}"
                 BorderThickness="0, 0, 0, 2"
                 Padding="23, 0, 0, 0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="{StaticResource ResourceKey=KeyIcon}"
                        Stretch="Uniform"
                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
