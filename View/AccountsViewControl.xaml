<UserControl x:Class="SnailPass_Desktop.View.AccountsViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnailPass_Desktop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border x:Name="SearchBar"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="4"
                        CornerRadius="10"
                        Background="{StaticResource ResourceKey=SecondBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0"
                                   Margin="10, 0, 0, 0"
                                   VerticalAlignment="Center"
                                   Width="20"
                                   Height="20"
                                   Fill="{StaticResource ResourceKey=LightTextColor}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Uniform"
                                             Visual="{StaticResource ResourceKey=SearchVectorIcon}"/>
                    </Rectangle.OpacityMask>
                </Rectangle>

                <TextBox Grid.Column="1"
                         Style="{StaticResource ResourceKey=SearchBarTextBox}"
                         Margin="5, 4, 0, 0"
                         Text="{Binding SearchBarText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Border x:Name="Passwords"
                Grid.Column="0"
                Grid.Row="1"
                Margin="4, 0, 4, 4"
                CornerRadius="10"
                Background="{StaticResource ResourceKey=MainBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <ListBox  x:Name="AccountsList"
                          Grid.Row="0"
                          Margin="5, 5, 5, 0"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemsSource="{Binding AccountsCollectiionView}">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"
                                                            HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>

                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Foreground"
                                            Value="{StaticResource ResourceKey=DarkTextColor}"/>
                                    <Setter Property="FontSize"
                                            Value="14"/>
                                    <Setter Property="FontFamily"
                                            Value="{StaticResource ResourceKey=UncutSansFont}"/>
                                    <Setter Property="FontWeight"
                                            Value="SemiBold"/>
                                    <Setter Property="BorderBrush"
                                            Value="{StaticResource ResourceKey=LightTextColor}"/>
                                </Style>
                            </GroupStyle.ContainerStyle>

                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource ResourceKey=SoftGreyColor}"
                                            BorderThickness="0"
                                            CornerRadius="5"
                                            Background="{StaticResource ResourceKey=HeaderBackground}">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource ResourceKey=DarkTextColor}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Grid.Column="0"
                                    Height="50">
                                <TextBlock Grid.Column="1"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding Login}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border x:Name="AddButton"
                        Grid.Row="1"
                        Margin="4"
                        CornerRadius="10"
                        Background="{StaticResource ResourceKey=PanelColor}">
                    <Rectangle Grid.Column="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Width="25"
                               Height="25"
                               Fill="{StaticResource ResourceKey=LightTextColor}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform"
                                         Visual="{StaticResource ResourceKey=AddNewVectorIcon}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Border>
            </Grid>
        </Border>

        <Border x:Name="PasswordData"
                        Grid.Column="1"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Margin="0, 4, 4, 4"
                        CornerRadius="10"
                        Background="{StaticResource ResourceKey=SecondBackground}">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center">
                
                <Border Margin="0, 10, 0, 0"
                        Background="{StaticResource ResourceKey=HeaderBackground}"
                        CornerRadius="10, 10, 5, 5"
                        Padding="50, 0, 50, 8">
                    <TextBlock Text="Login"
                               Foreground="{StaticResource ResourceKey=LightTextColor}"
                               FontSize="15"
                               FontFamily="Uncut Sans"
                               FontWeight="DemiBold"
                               HorizontalAlignment="Center"
                               Margin="0, 10, 0, 0"/>
                </Border>

                <TextBlock Text="{Binding ElementName=AccountsList, Path=SelectedItem.Login}"
                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                           FontSize="15"
                           FontFamily="Uncut Sans"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Center"
                           Margin="0, 10, 0, 10"/>

                <Border Background="{StaticResource ResourceKey=HeaderBackground}"
                        CornerRadius="10, 10, 5, 5"
                        Padding="50, 0, 50, 8">
                    <TextBlock Text="Password"
                    Foreground="{StaticResource ResourceKey=LightTextColor}"
                    FontSize="15"
                    FontFamily="Uncut Sans"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0"/>
                </Border>
                
                <TextBlock Text="{Binding ElementName=AccountsList, Path=SelectedItem.Password}"
                    Foreground="{StaticResource ResourceKey=LightTextColor}"
                    FontSize="15"
                    FontFamily="Uncut Sans"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0"/>

                <ListBox>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Height="50">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height ="*"/>
                                        <RowDefinition Height ="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding FieldName}"/>
                                    
                                    <TextBlock Grid.Row="1"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding Value}"/>
                                </Grid>
                                
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
