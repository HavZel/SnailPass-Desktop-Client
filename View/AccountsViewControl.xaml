<UserControl x:Class="SnailPass_Desktop.View.AccountsViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i1="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:i2="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" MinWidth="150"/>
            <ColumnDefinition Width="40*" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border x:Name="SearchBar"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="4"
                        CornerRadius="10"
                        Background="{StaticResource ResourceKey=SecondBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0"
                           Margin="10, 0, 0, 0"
                           VerticalAlignment="Center"
                           Width="20"
                           Height="20"
                           Fill="{StaticResource ResourceKey=LightTextColor}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Uniform"
                                             Visual="{StaticResource ResourceKey=SearchVectorIcon}"/>
                    </Rectangle.OpacityMask>
                </Rectangle>


                <Grid Grid.Column="1">
                    <TextBox x:Name="SearchBarFilterText"
                             Grid.Column="1"
                             Style="{StaticResource ResourceKey=SearchBarTextBox}"
                             Margin="5, 4, 0, 0"
                             Text="{Binding SearchBarText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center">
                    </TextBox>
                    <TextBlock Margin="7, 4, 0, 0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Resources>
                                    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                                </Style.Resources>
                                <Setter Property="Height" Value="22"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="FontFamily" Value="Uncut Sans"/>
                                <Setter Property="FontWeight" Value="Regular"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="Text" Value="Search"/>
                                <Setter Property="Foreground" Value="{StaticResource ResourceKey=SemiVisibleTextColor}"/>
                                <Setter Property="FontWeight" Value="Regular"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="Visibility" Value="{Binding ElementName=SearchBarFilterText, 
                                    Path=Text.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>

        <Border x:Name="Accounts"
                Grid.Column="0"
                Grid.Row="1"
                Margin="4, 0, 4, 4"
                CornerRadius="10"
                BorderBrush="{StaticResource ResourceKey=BorderColor}"
                BorderThickness="1"
                Background="{StaticResource ResourceKey=MainBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Background="{StaticResource ResourceKey=HeaderBackground}"
                        CornerRadius="10, 10, 0, 0"
                        BorderBrush="{StaticResource ResourceKey=BorderColor}"
                        BorderThickness="0, 0, 0, 2">
                    <TextBlock Style="{StaticResource ResourceKey=LeftMenuButtonText}"
                               Text="Accounts"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource ResourceKey=LightTextColor}"
                               FontFamily="{StaticResource ResourceKey=UncutSansFont}"
                               FontSize="20"
                               Margin="0"/>
                </Border>
                <ListBox  x:Name="AccountsList"
                          Grid.Row="1"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemsSource="{Binding AccountsCollectionView}"
                          SelectedItem="{Binding SelectedAccount}"
                          Grid.ColumnSpan="2" 
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Name="ItemBorder"
                                                Padding="0"
                                                Margin="10, 0, 0, 0"
                                                SnapsToDevicePixels="true"
                                                BorderBrush="{StaticResource ResourceKey=BorderColor}"
                                                BorderThickness="0">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder"
                                                        Property="Background"
                                                        Value="{StaticResource ResourceKey=NearMainBackground}"/>
                                                <Setter TargetName="ItemBorder"
                                                        Property="Padding"
                                                        Value="6, 0, 0, 0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" 
                                                        Property="Background" 
                                                        Value="{StaticResource ResourceKey=SecondBackground}"/>
                                                <Setter TargetName="ItemBorder"
                                                        Property="Padding"
                                                        Value="6, 0, 0, 0"/>
                                                <Setter TargetName="ItemBorder"
                                                        Property="BorderThickness"
                                                        Value="5, 0, 0, 0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"
                                                            HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>

                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Foreground"
                                            Value="{StaticResource ResourceKey=DarkTextColor}"/>
                                    <Setter Property="FontSize"
                                            Value="14"/>
                                    <Setter Property="FontFamily"
                                            Value="{StaticResource ResourceKey=UncutSansFont}"/>
                                    <Setter Property="FontWeight"
                                            Value="SemiBold"/>
                                    <Setter Property="BorderBrush"
                                            Value="{StaticResource ResourceKey=LightTextColor}"/>
                                </Style>
                            </GroupStyle.ContainerStyle>

                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource ResourceKey=SoftGreyColor}"
                                            BorderThickness="0, 1, 0, 1"
                                            Background="{StaticResource ResourceKey=HeaderBackground}"
                                            Margin="-3, 0, -3, 0">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource ResourceKey=DarkTextColor}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Height="30">
                                <TextBlock Grid.Column="1"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           VerticalAlignment="Center"
                                           Text="{Binding Login}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Border Grid.Row="2"
                        Grid.ColumnSpan="2"
                        BorderBrush="{StaticResource ResourceKey=BorderColor}"
                        BorderThickness="0, 1, 0, 0">
                    <Button x:Name="AddButton"
                            Style="{StaticResource ResourceKey=AddNewButton}"
                            Command="{Binding AddNewCommand}" Grid.ColumnSpan="2">
                    </Button>
                </Border>

            </Grid>
        </Border>

        <Border x:Name="PasswordData"
                Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="2"
                Margin="0, 4, 4, 4"
                CornerRadius="10"
                Background="{StaticResource ResourceKey=SecondBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto" MinHeight="80"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            Margin="10, 0, 10, 0"
                            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <Border BorderBrush="{StaticResource ResourceKey=BorderColor}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="0, 5, 0, 0">
                        <StackPanel>
                            <Border Background="{StaticResource ResourceKey=HeaderBackground}"
                                    CornerRadius="10, 10, 0, 0"
                                    Padding="50, 0, 50, 8"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="Login"
                                       Foreground="{StaticResource ResourceKey=LightTextColor}"
                                       FontSize="15"
                                       FontFamily="Uncut Sans"
                                       FontWeight="DemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0, 10, 0, 0"/>
                            </Border>

                            <Border Height="35"
                                    Width="auto">
                                <TextBlock Text="{Binding ElementName=AccountsList, Path=SelectedItem.Login}"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           FontFamily="Uncut Sans"
                                           FontWeight="DemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{StaticResource ResourceKey=BorderColor}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="0, 5, 0, 0">
                        <StackPanel>
                            <Border Background="{StaticResource ResourceKey=HeaderBackground}"
                                    CornerRadius="10, 10, 0, 0"
                                    Padding="50, 0, 50, 8"
                                    HorizontalAlignment="Stretch">
                                <TextBlock Text="Password"
                                           Foreground="{StaticResource ResourceKey=LightTextColor}"
                                           FontSize="15"
                                           FontFamily="Uncut Sans"
                                           FontWeight="DemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0, 10, 0, 0"/>
                            </Border>

                            <Grid x:Name="PasswordBoxField"
                                  Background="Transparent"
                                  MouseDown="PasswordBoxField_MouseDown">
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard x:Name="HintTextStoyBoardEnter">
                                            <Storyboard Storyboard.TargetName="HintText">
                                                <DoubleAnimation From="1" 
                                                                 To="0" 
                                                                 Duration="0:0:0"
                                                                 Storyboard.TargetProperty="Opacity"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard x:Name="HintTextStoyBoardLeave">
                                            <Storyboard Storyboard.TargetName="HintText">
                                                <DoubleAnimation From="0" 
                                                                 To="1"
                                                                 Duration="0:0:2"
                                                                 BeginTime="0:0:1"
                                                                 Storyboard.TargetProperty="Opacity"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>

                                    <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                        <RemoveStoryboard BeginStoryboardName="OpacityStoryboard"/>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <RemoveStoryboard BeginStoryboardName="OpacityStoryboard"/>
                                        <BeginStoryboard>
                                            <Storyboard Storyboard.TargetName="PasswordField">
                                                <DoubleAnimation To="1" 
                                                                 Duration="0:0:0"
                                                                 Storyboard.TargetProperty="Opacity"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard x:Name="OpacityStoryboard">
                                            <Storyboard Storyboard.TargetName="PasswordField">
                                                <DoubleAnimation From="1"
                                                                 To="0"
                                                                 Duration="0:0:1"
                                                                 Storyboard.TargetProperty="Opacity"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                                <Border x:Name="HintText"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="Transparent">
                                    <Border Height="35"
                                            Width="auto">
                                        <TextBlock Margin="0, 4, 0, 0"
                                               HorizontalAlignment="Center"
                                               Height="22"
                                               FontSize="15"
                                               FontFamily="Uncat Sans"
                                               FontWeight="Regular"
                                               FontStyle="Italic"
                                               Text="Hover over to see the password"
                                               Foreground="{StaticResource ResourceKey=SemiVisibleTextColor}"
                                               Opacity="1">
                                        </TextBlock>
                                    </Border>
                                </Border>

                                <Border x:Name="PasswordField"
                                    ToolTipService.InitialShowDelay="0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    MouseEnter="PasswordTextBox_MouseEnter"
                                    MouseLeave="PasswordTextBox_MouseLeave"
                                    Opacity="0">
                                    <Border.ToolTip>
                                        <ToolTip Placement="Mouse"
                                                 Background="{StaticResource ResourceKey=MainBackground}">
                                            <ToolTip.Style>
                                                <Style TargetType="ToolTip">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToolTip">
                                                                <Border Background="{StaticResource ResourceKey=MainBackground}"
                                                                    BorderBrush="{StaticResource ResourceKey=BorderColor}"
                                                                    BorderThickness="1"
                                                                    CornerRadius="5">
                                                                    <TextBlock Style="{StaticResource ResourceKey=CommonTextStyle}"
                                                                           Margin="8">
                                                                        Click to copy!
                                                                    </TextBlock>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ToolTip.Style>
                                        </ToolTip>
                                    </Border.ToolTip>
                                    <Border Height="35"
                                            Width="auto">
                                        <TextBlock x:Name="PasswordTextBox"
                                                Text="{Binding Path=SelectedAccount.Password, NotifyOnTargetUpdated=True}"
                                                Foreground="{StaticResource ResourceKey=LightTextColor}"
                                                FontSize="15"
                                                FontFamily="Uncut Sans"
                                                FontWeight="DemiBold"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="1">
                                        </TextBlock>
                                    </Border>
                                </Border>
                            </Grid>
                            
                        </StackPanel>
                    </Border>
                    
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button x:Name="AddFieldButton"
                            Margin="10, 10, 10, 0"
                            Style="{StaticResource ResourceKey=AddFieldButton}"
                            Command="{Binding AddNewCommand}">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="0"
                      Grid.Row="0"
                      Grid.RowSpan="2"
                      ShowsPreview="False"
                      Width="6"
                      Margin="0, 0, -1, 0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Background="Transparent" />
    </Grid>
</UserControl>