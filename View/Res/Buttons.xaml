<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="TopMenuSmallButton"
                     TargetType="Button">
        <Grid Name="Btn"
              Margin="2, 0, 2, 0">
            <Border Width="24"
                    Height="24"
                    CornerRadius="7">
                <Label Content="{TemplateBinding Content}"
                       Background="Transparent"
                       FontSize="{TemplateBinding FontSize}"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Foreground="{StaticResource ResourceKey=DarkTextColor}"
                       FontFamily="Uncut Sans"
                       FontWeight="DemiBold"
                       Cursor="Hand"
                       HorizontalAlignment="Center">
                </Label>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource ResourceKey=PassiveButtonColor}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                           AncestorType={x:Type Button}},
                                                           Path=IsMouseOver}"
                                         Value="true">
                                <Setter Property="Background" Value="{StaticResource ResourceKey=ActiveButtonColor}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="BigButton" TargetType="Button">
        <Border Width="Auto"
                Height="Auto"                
                CornerRadius="7">
            <Label Content="{TemplateBinding Content}"
                   Background="Transparent"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Foreground="{StaticResource ResourceKey=MainBackground}"
                   FontFamily="Uncut Sans"
                   FontWeight="DemiBold"
                   Cursor="Hand"
                   HorizontalAlignment="Center">
            </Label>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource ResourceKey=PassiveButtonColor}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ResourceKey=ActiveButtonColor}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="LinkButton" TargetType="Button">
        <Border CornerRadius="7">
            <Label Content="{TemplateBinding Content}"
                   Background="Transparent"
                   FontSize="15"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Foreground="{StaticResource ResourceKey=LightTextColor}"
                   FontFamily="Uncut Sans"
                   FontWeight="DemiBold"
                   Cursor="Hand"
                   HorizontalAlignment="Center">
            </Label>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ResourceKey=HeaderBackground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </ControlTemplate>


</ResourceDictionary>