<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="TopMenuButton" TargetType="Button">
        <Grid Name="Btn" Margin="10, 0, 10, 0">
            <Border Height="24"
                    CornerRadius="7">
                <Grid>
                    <Label Content="{TemplateBinding Content}"
                           Background="Transparent"
                           FontSize="{TemplateBinding FontSize}"
                           VerticalAlignment="Center"
                           Foreground="#454545"
                           FontFamily="Uncut Sans"
                           FontWeight="DemiBold"
                           Cursor="Hand"
                           HorizontalAlignment="Center">
                    </Label>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource 
                                            Mode=FindAncestor,
                                            AncestorType={x:Type Button}},
                                            Path=IsMouseOver}" Value="true">
                                <Setter Property="Background" Value="#8D93A6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="TopMenuSmallButton" TargetType="Button">
        <Grid Name="Btn" Margin="2, 0, 2, 0">
            <Border Width="24"
                    Height="24"
                    CornerRadius="7">
                <Grid>
                    <Label Content="{TemplateBinding Content}"
                           Background="Transparent"
                           FontSize="{TemplateBinding FontSize}"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Foreground="#454545"
                           FontFamily="Uncut Sans"
                           FontWeight="DemiBold"
                           Cursor="Hand"
                           HorizontalAlignment="Center">
                    </Label>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#c2c2c2"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource 
                                            Mode=FindAncestor,
                                            AncestorType={x:Type Button}},
                                            Path=IsMouseOver}" Value="true">
                                <Setter Property="Background" Value="#8D93A6"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="BigEnterButton" TargetType="Button">
        <Grid Name="Btn">
            <Border Width="Auto"
                    Height="Auto"
                    CornerRadius="7">
                <Grid>
                    <Label Content="{TemplateBinding Content}"
                           Background="Transparent"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Foreground="AliceBlue"
                           FontFamily="Uncut Sans"
                           FontWeight="DemiBold"
                           Cursor="Hand"
                           HorizontalAlignment="Center">
                    </Label>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#c2c2c2"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background" Value="#8D93A6"/>
                            </Trigger>
                            <!--<DataTrigger Binding="{Binding RelativeSource={RelativeSource 
                                            Mode=FindAncestor,
                                            AncestorType={x:Type Button}},
                                            Path=IsMouseOver}" Value="true">
                                <Setter Property="Background" Value="#8D93A6"/>
                            </DataTrigger>-->
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>